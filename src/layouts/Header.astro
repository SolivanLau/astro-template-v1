---
import Banner from "@components/Banner.astro";
import type { ImageMetadata } from "astro";

/**
 * A custom Header component. Providing a background image on the right side.
 * @prop {string} title - the main title for the header
 * @prop {string} [subtitle] - the subtitle for the header
 * @prop {ImageMetadata} [backgroundImgPath] - the image data for the background image
 */

interface Props {
    title: string;
    subtitle?: string;
    backgroundImgPath?: ImageMetadata;
    backgroundImgPosition?: "center" | "left" | "right";
    backgroundImgLoading?: "lazy" | "eager";
    class?: string;
    [key: string]: any;
}
const {
    title,
    subtitle,
    backgroundImgPath,
    backgroundImgPosition = "right",
    backgroundImgLoading = "lazy",
    class: className,
    ...rest
} = Astro.props;
---

<Banner
    backgroundImgPath={backgroundImgPath}
    backgroundImgPosition={backgroundImgPosition}
    backgroundImgLoading={backgroundImgLoading}
    tagName="header"
    class:list={["header", className]}
    {...rest}
>
    <h1 class="title-font--display" data-scrollimate="fade-left">{title}</h1>
    {subtitle && <p>{subtitle}</p>}
</Banner>

<style lang="scss">
    .header {
        color: var(--clr-white);
    }
</style>
