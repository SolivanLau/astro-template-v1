---
import type { Node } from "src/assets/scripts/cms/blockRenderer";
import { renderBlock } from "src/assets/scripts/cms/blockRenderer";

interface Props {
    html: Node[] | string | undefined | null;
}

const { html } = Astro.props;
---

<Fragment>
    {!html ? <slot /> : <Fragment set:html={renderBlock(html)} />}
</Fragment>
