---
import type { ImageMetadata } from "astro";
import Picture from "astro/components/Picture.astro";

interface Props {
    src: ImageMetadata;
    alt: string;
    width: number;
    height: number;
    formats: string[];
}

const { src, alt, width, height, formats } = Astro.props;
---

<div class="card background__image-parent">
    <slot />
    <Picture class="background__image" src={src} alt={alt} width={width} formats={formats} />
</div>

<style lang="scss"></style>
