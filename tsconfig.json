{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@assets/*": ["src/assets/*"],
            "@fonts/*": ["fonts/*"],
            "@icons/*": ["src/assets/icons/*"],
            "@images/*": ["src/assets/images/*"],
            "@styles/*": ["src/assets/styles/*"],
            "@scripts/*": ["src/assets/scripts/*"]
        }
    }
}
